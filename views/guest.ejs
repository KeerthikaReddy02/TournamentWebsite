<!DOCTYPE html>
<html>
  <head>
    <title>Tourneo</title>
    <link href="https://fonts.googleapis.com/css?family=Archivo&display=swap" rel="stylesheet"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="../CSS/styles.css">
  </head>
  <body class="body2">
    <img class="logo" src="../Images/logo.png" alt="logo">
    <div style="padding:1%;">
      <h1 style="text-align:center;">Watch a Tournament</h1>
      <h1>Tournaments: </h1><br>
      <div>
        <% for(let i = 0; i < Name.length; i++ ){ %>
        <div>
          <u style="text-decoration-color:white;"><h5 style="color: white;">Name: <%=Name[i]%></h5></u>
          <div class="info-shape">
            <h5 class="h3Text">Format: <%=Format[i]%></h5>
          </div>
          <div class="info-shape">
            <h5 class="h3Text">Time: <%=Time[i]%></h5>
          </div>
          <div class="info-shape">
            <h5 class="h3Text">Venue: <%=Venue[i]%></h5>
          </div>
          <div class="info-shape">
            <h5 class="h3Text">Contact: <%=Contact[i]%></h5>
          </div>
        </div>
        <% } %>

        </div>
      </div>
    </div>
  </body>
</html>
